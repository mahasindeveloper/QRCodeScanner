<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#D50E0E0E"
    android:layout_height="match_parent">




        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#09A4BA"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/home"
                        android:layout_centerVertical="true"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/baseline_home_24"
                        android:tint="#fff"
                        tools:ignore="UseAppTint" />



                    <TextView
                        android:layout_toRightOf="@id/home"
                        android:layout_marginLeft="10dp"
                        android:textSize="25sp"
                        android:layout_centerVertical="true"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:text="Code Scanner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/baseline_settings_suggest_24"
                        android:tint="#fff"
                        tools:ignore="UseAppTint" />


                </RelativeLayout>



            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/flashlight_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginRight="20dp"
                    >

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_flashlight_off_24"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:tint="#09A4BA"
                        tools:ignore="UseAppTint"
                        />

                    <TextView
                        android:layout_gravity="center"
                        android:textColor="#09A4BA"
                        android:textStyle="bold"
                        android:text="Flash Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/SelectQR"
                    android:layout_marginLeft="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="3dp"
                    >

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_image_search_24"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:tint="#09A4BA"
                        tools:ignore="UseAppTint"
                        />

                    <TextView
                        android:layout_gravity="center"
                        android:textColor="#09A4BA"
                        android:textStyle="bold"
                        android:text="Scan Gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <SurfaceView
                android:padding="20dp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/cameraPreview"
                android:layout_width="300dp"
                android:layout_height="300dp" />

            <TextView
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:text=" "
                android:textColor="#09A4BA"
                android:textSize="20sp" />



        </RelativeLayout>






    </LinearLayout>













</RelativeLayout>
